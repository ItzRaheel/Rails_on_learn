<h1> Wellcome to Login Page </h1>

<% if policy(@product).edit? %>
 <%= link_to "Edit Product", edit_product_path(@product), class: "btn btn-primary" %> 
 <% end %> 
 <% if policy(@product).destroy? %>
  <%= link_to "Delete Product", product_path(@product), method: :delete, data: { confirm: "Are you sure you want to delete this product?",turbo: false }, class: "btn btn-danger" %> 
<% end %>
 <%= link_to "Back to Products", root_path, class: "btn btn-secondary" %>
